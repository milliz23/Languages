<Page x:Class="Languages.page.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Languages.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <StackPanel Orientation="Vertical" Width="800">
            <TextBlock Name="TBServiceName" FontSize="22" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Loaded="TextBlock_Loaded"  HorizontalAlignment="Center"></TextBlock>
            <ComboBox Name="CBClients" Margin="0,10,0,0" Width="350"></ComboBox>
            <DatePicker Width="350" Name="DPDate" Margin="0,10,0,0"></DatePicker>
            <GroupBox Header="Введите время начала оказания услуги" Width="350" Margin="0,10,0,0">
                <TextBox Name="TBxStartTime"></TextBox>
            </GroupBox>
            <Button Name="AddReg" Width="150" Margin="0,20,0,0" Click="AddReg_Click">Записать</Button>
            <Button Width="150" Margin="0,10,0,0" Click="Button_Click">Назад</Button>
        </StackPanel>
    </Grid>
</Page>
