<Page x:Class="Languages.page.UpdatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Languages.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdatPage">

    <Grid>
        <StackPanel>
            <GroupBox Header="Введите название услуги">
                <TextBox Name="TBName"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите стоимость услуги">
                <TextBox Name="TBCost"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите скидку">
                <TextBox Name="TBDis"></TextBox>
            </GroupBox>
            <Image Name="Image" Width="50" Height="50" HorizontalAlignment="Left"/>
            <Button Click="Button_photo">Выберите фото для кота</Button>

            <Button Click="Button_Service">Записать информацию о услуге</Button>
        </StackPanel>
    </Grid>
</Page>
